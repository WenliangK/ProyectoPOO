<?xml version="1.0" encoding="UTF-8"?>
<project name="Semana03POO" default="run" basedir=".">
    <description>Proyecto Java para Tienda Hiraoka</description>

    <property name="src.dir" value="src"/>
    <property name="build.dir" value="build"/>
    <property name="lib.dir" value="lib"/>

    <path id="classpath">
        <fileset dir="${lib.dir}">
            <include name="*.jar"/>
        </fileset>
    </path>

    <target name="compile">
        <mkdir dir="${build.dir}"/>
        <javac srcdir="${src.dir}" destdir="${build.dir}" includeantruntime="false" classpathref="classpath"/>
    </target>

    <target name="run" depends="compile">
        <java classname="tu.paquete.Main" fork="true" classpathref="classpath">
            <classpath>
                <pathelement path="${build.dir}"/>
                <path refid="classpath"/>
            </classpath>
        </java>
    </target>
</project>